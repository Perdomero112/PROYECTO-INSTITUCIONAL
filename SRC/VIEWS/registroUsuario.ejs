<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/registro-usr.style.css">
    <link rel="icon" href="/upload/icon-bg.png" type="imagen/png">
    <title>Registrar  - Biblioteca BG</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    
    <div class="registro-container">
        <!-- Logo -->
        <div class="logo">
            <img src="/upload/icon-bg.png" alt="Logo Biblioteca BG">
        </div>
        
        <!-- Panel izquierdo - Branding -->
        <div class="branding-panel">
            <div class="branding-content">
                <h1>BIBLIOTECA BG</h1>
                <p class="subtitle">Centro que brilla irradiando cultura</p>
                <p class="description">Únete a nuestra comunidad educativa y accede a recursos académicos, investigaciones y materiales educativos. Forma parte de nuestro ecosistema de aprendizaje.</p>
                <a href="/login" class="signin-link">¿Ya tienes cuenta? Inicia Sesión</a>
            </div>
        </div>
        
        <!-- Panel derecho - Formulario -->
        <div class="form-panel">
            <h2>Crear Cuenta</h2>
            
            <form action="/registroUsuario" method="post" class="formulario-registro">
                <!--tipo de usuario-->
                <div class="contenedor-tipo-usr">
                    <div class="tipo-usr">
                        <label for="estudiante">
                            <input type="radio" name="tipo_usr" id="estudiante" value="estudiante" required>
                            Estudiante
                        </label>
                        <label for="docente">
                            <input type="radio" name="tipo_usr" id="docente" value="docente" required>
                            Docente
                        </label>
                        <label for="admin">
                            <input type="radio" name="tipo_usr" id="admin" value="admin" required>
                            Administrador
                        </label>
                    </div>
                </div>
                <!--formulario en comun-->
                <div class="contenedor-comun">
                    <div class="form-group">
                        <label for="num_documento">Número de Documento</label>
                        <input type="number" name="num_documento" id="num_documento" required maxlength="11" placeholder="Ingresa tu número de documento">
                    </div>
                    <div class="form-group">
                        <label for="nombre">Nombre Completo</label>
                        <input type="text" name="nombre" id="nombre" required placeholder="Ingresa tu nombre completo">
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono</label>
                        <input type="tel" name="telefono" id="telefono" required placeholder="Ingresa tu teléfono">
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" name="email" id="email" required placeholder="Ingresa tu correo electrónico">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password" required placeholder="Crea una contraseña segura">
                    </div>
                </div>
                <!--formulario estudiante-->
                <div class="unico contenedor-estudiante">
                    <div class="form-group">
                        <label for="grado">Grado</label>
                        <select name="grado" id="grado">
                            <option value="">Selecciona tu grado</option>
                            <option value="6">6°</option>
                            <option value="7">7°</option>
                            <option value="8">8°</option>
                            <option value="9">9°</option>
                            <option value="10">10°</option>
                            <option value="11">11°</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="curso">Curso</label>
                        <select name="curso" id="curso">
                            <option value="">Selecciona tu curso</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="E">E</option>
                            <option value="F">F</option>
                            <option value="G">G</option>
                        </select>
                    </div>
                </div>
                
                <!--formulario admin-->
                <div class="unico contenedor-admin">
                    <div class="form-group">
                        <label for="codigo_admin">Código de Administrador</label>
                        <input type="text" name="codigo_admin" id="codigo_admin" placeholder="Ingresa tu código de administrador">
                    </div>
                </div>
                
                <button type="submit" class="submit-btn">Crear Cuenta →</button>
            </form>
            
            <div class="links">
                <a href="/login">¿Ya tienes cuenta? Inicia Sesión</a>
            </div>
        </div>
    </div>

    <script>
        // Funcionalidad para mostrar/ocultar campos según tipo de usuario
        document.addEventListener('DOMContentLoaded', function() {
            const tipoUsuario = document.querySelectorAll('input[name="tipo_usr"]');
            const contenedorEstudiante = document.querySelector('.contenedor-estudiante');
            const contenedorAdmin = document.querySelector('.contenedor-admin');
            
            tipoUsuario.forEach(radio => {
                radio.addEventListener('change', function() {
                    // Ocultar todos los contenedores únicos
                    document.querySelectorAll('.unico').forEach(contenedor => {
                        contenedor.classList.remove('active');
                    });
                    
                    // Mostrar el contenedor correspondiente
                    if (this.value === 'estudiante') {
                        contenedorEstudiante.classList.add('active');
                    } else if (this.value === 'admin') {
                        contenedorAdmin.classList.add('active');
                    }
                });
            });
        });

        // Efecto de carga en el botón de envío
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = document.querySelector('.submit-btn');
            submitBtn.classList.add('loading');
            submitBtn.textContent = 'Creando cuenta...';
        });

        // Animación de entrada
        window.addEventListener('load', function() {
            document.querySelector('.registro-container').style.opacity = '0';
            document.querySelector('.registro-container').style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                document.querySelector('.registro-container').style.transition = 'all 0.6s ease';
                document.querySelector('.registro-container').style.opacity = '1';
                document.querySelector('.registro-container').style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
</body>
</html>